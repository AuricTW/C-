#include<stdio.h>
#include<stdlib.h>
#include<windows.h>
#include<conio.h>
int main()
{
	char a[100][100] = { 
						"###########",
						"#o   #    #",
						"# ##   ## #",
						"#   # #  ##",
						"# # # #   #",
						"# # ##  # #",
						"# #     # #",
						"# # #  ##  ",
						"#  # # # ##",
						"#  #      #",
						"###########",};
	int i, x = 1, y = 1;
	for (i = 0; i < 12; i++)
		puts(a[i]);
	char ch;
	while (x != 11 || y != 7)
	{
		ch = _getch();
		if (ch == 's')
		{
			if (a[x + 1][y] != '#')
			{
				a[x][y] = ' ';
				x++;
				a[x][y] = 'o';
			}
		}
		if (ch == 'w')
		{
			if (a[x - 1][y] != '#')
			{
				a[x][y] = ' ';
				x--;
				a[x][y] = 'o';
			}
		}
		if (ch == 'a')
		{
			if (a[x][y - 1] != '#')
			{
				a[x][y] = ' ';
				y--;
				a[x][y] = 'o';
			}
		}
		if (ch == 'd')
		{
			if (a[x][y + 1] != '#')
			{
				a[x][y] = ' ';
				y++;
				a[x][y] = 'o';
			}
		}

		system("cls");
		if(x==7&&y==11)
		printf("過關!\n");
		for (i = 0; i < 12; i++)
			puts(a[i]);
	}
		return 0;
}
