#include<stdio.h>
#include<stdlib.h>	//隨機 
#include<time.h> 	//時間 
#include<windows.h>
#include<conio.h>

void come(void)		//副程式測試
{
	printf("感謝遊玩,您還需要使用本程式嗎:\n");
}

int main(void){
	
	int random,random1,guess,sum,sum1,sum2,part;
	double list;
	
	srand(time(0));
	

	printf("請問您想要使用什麼功能:\n(1)猜數字遊戲\n(2)計算機\n(3)圖形列印\n(4)走迷宮\n(5)賭場\n");
	scanf("%lf",&list);
	
	if (list == 1){ 	//猜數字 
		int sum=0;
		int store1=100; 
		int store2=1; 
		random = rand();	//設定隨機答案 
		random1 = random%100+1;
		
		while(guess!=random1){
			sum++;
			printf("%d到%d輸入一個數\n",store2,store1);
			scanf("%d",&guess);
			if(guess<random1){		//猜測數比答案小 
				printf("比%d大,比%d小\n",guess,store1);
				store2=guess;
			}
			else if(guess>random1){		//猜測數比答案大 
				printf("比%d大,比%d小\n",store2,guess);
				store1=guess;
			}
			
		}
		printf("恭喜答對\n");
		printf("您總共猜了%d次\n",sum);
		
	}
	
	
	else if (list == 2){
		printf("尚未寫入\n");
		
	}
	
	
	else if (list == 3){
		printf("尚未寫入\n");
		
	}
	
	
	else if (list == 4){
		char a[100][100] = { 
							"###########",
							"#o   #    #",
							"# ##   ## #",
							"#   # #  ##",
							"# # # #   #",
							"# # ##  # #",
							"# #     # #",
							"# # #  ##  ",
							"#  # # # ##",
							"#  #      #",
							"###########",};
		int i, x = 1, y = 1;
		for (i = 0; i < 12; i++){ 
			puts(a[i]);
		} 
		char ch;
		while (x != 11 || y != 7)
		{
			sum1++;
			ch = _getch();
			if (ch == 's')
			{
				if (a[x + 1][y] != '#')
				{
					a[x][y] = ' ';
					x++;
					a[x][y] = 'o';
				}
			}
			if (ch == 'w')
			{
				if (a[x - 1][y] != '#')
				{
					a[x][y] = ' ';
					x--;
					a[x][y] = 'o';
				}
			}
			if (ch == 'a')
			{
				if (a[x][y - 1] != '#')
				{
					a[x][y] = ' ';
					y--;
					a[x][y] = 'o';
				}
			}
			if (ch == 'd')
			{
				if (a[x][y + 1] != '#')
				{
					a[x][y] = ' ';
					y++;
					a[x][y] = 'o';
				}
			}
	
			system("cls");
			if(x==7&&y==11){ 
			    printf("過關!\n");
			    printf("總共花了%d步:",sum1);
			} 
			for (i = 0; i < 12; i++){ 
				puts(a[i]);
			} 
		}
	}
	
	
	else if (list == 5){
		do{
			 int sum=3000;
			 printf("您的剩餘籌碼為:%d",sum); 
			 printf("請選擇賭場功能\n1.猜數字\n2.賭大小\n");
			 scanf("%d",&part);
			switch(part){
				case A: 	//下注籌碼,1~100猜一個數字,沒猜中繼續,1次中50倍,2次中20倍,3次中5,4次中2倍,5次中1倍,6次中1/2倍,7次以上結束遊戲 
				    int big=100;
					int small=1;
				    random=rand();
				    random1=random%100+1;
				    while(guess!=random1){
				    	sum++;
				    	scanf("%d",&guess);
				    	if(guess>random1){
							big=random1;
							printf("比%d大，比%d小",&small,&big);		
						}
						else if(guess<random1){
							small=random1;
							printf("比%d大，比%d小",&small,&big);		
						}
				    }    
					break;
				
				case B: 
				/*
下注	
大小	    總點數為：11或更大/10或更小				1賠1	
兩顆骰子	猜中兩顆骰子的組合						1賠5	
雙骰	    任意兩顆或以上點數相同，並為指定之點數	1賠10	
圍骰	    任意三顆點數相同，並為指定之點數		1賠180	
全圍    	圍一至圍六任何一種						1賠30			
*/ 	 
				printf(" ");
				break;
				
				case C: 	//
				printf(" ");
					break;
				
				default:	// 
				printf(" ");	
					break;
						
	    	}
	    }while(sum<=0);
	
		
	}
	come();
	return 0;
}
