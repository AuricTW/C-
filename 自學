#include<stdio.h>
#include<stdlib.h>	//隨機 
#include<time.h> 	//時間 


void come(void)		//副程式測試
{
	printf("測試123");
}

int main(void){
	
	int random,random1,guess;
	double list;
	
	srand(time(0));
	

	printf("請問您想要使用什麼功能:\n(1)猜數字遊戲\n(2)計算機\n(3)圖形列印\n");
	scanf("%lf",&list);
	
	if (list == 1){ //猜數字 
		random = rand();
		random1 = random%100+1;
		while(guess!=random1){
			printf("1到100輸入一個數\n");
			scanf("%d",&guess);
			if(guess<random1){
				printf("比%d大\n",guess);
				
			}
			else if(guess>random1){
				printf("比%d小\n",guess);
			}
			
		}
		printf("恭喜答對");
		
	}
	else if (list == 2){
		printf("尚未寫入\n");
		
	}
	else if (list == 2){
		printf("尚未寫入\n");
		
	}
	come();
	return 0;
}
