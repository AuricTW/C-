#include<stdio.h>
#include<stdlib.h>	//隨機 
#include<time.h> 	//時間 
#include<windows.h>
#include<conio.h>

void come(void)		//副程式測試
{
	printf("感謝遊玩,您還需要使用本程式嗎:\n");
}

int main(void){
	
	int random,random1,guess;
	double list;
	
	srand(time(0));
	

	printf("請問您想要使用什麼功能:\n(1)猜數字遊戲\n(2)計算機\n(3)圖形列印\n(4)走迷宮\n(5)賭場\n");
	scanf("%lf",&list);
	
	if (list == 1){ 	//猜數字 
		int sum=0;
		int store1=100; 
		int store2=1; 
		random = rand();	//設定隨機答案 
		random1 = random%100+1;
		
		while(guess!=random1){
			sum++;
			printf("%d到%d輸入一個數\n",store2,store1);
			scanf("%d",&guess);
			if(guess<random1){		//猜測數比答案小 
				printf("比%d大,比%d小\n",guess,store1);
				store2=guess;
			}
			else if(guess>random1){		//猜測數比答案大 
				printf("比%d大,比%d小\n",store2,guess);
				store1=guess;
			}
			
		}
		printf("恭喜答對\n");
		printf("您總共猜了%d次\n",sum);
		
	}
	
	else if (list == 2){
		printf("尚未寫入\n");
		
	}
	
	else if (list == 3){
		printf("尚未寫入\n");
		
	}
	
	else if (list == 4){
		char a[100][100] = { 
							"###########",
							"#o   #    #",
							"# ##   ## #",
							"#   # #  ##",
							"# # # #   #",
							"# # ##  # #",
							"# #     # #",
							"# # #  ##  ",
							"#  # # # ##",
							"#  #      #",
							"###########",};
		int i, x = 1, y = 1;
		for (i = 0; i < 12; i++){ 
			puts(a[i]);
		} 
		char ch;
		while (x != 11 || y != 7)
		{
			ch = _getch();
			if (ch == 's')
			{
				if (a[x + 1][y] != '#')
				{
					a[x][y] = ' ';
					x++;
					a[x][y] = 'o';
				}
			}
			if (ch == 'w')
			{
				if (a[x - 1][y] != '#')
				{
					a[x][y] = ' ';
					x--;
					a[x][y] = 'o';
				}
			}
			if (ch == 'a')
			{
				if (a[x][y - 1] != '#')
				{
					a[x][y] = ' ';
					y--;
					a[x][y] = 'o';
				}
			}
			if (ch == 'd')
			{
				if (a[x][y + 1] != '#')
				{
					a[x][y] = ' ';
					y++;
					a[x][y] = 'o';
				}
			}
	
			system("cls");
			if(x==7&&y==11){ 
			    printf("過關!\n");
			} 
			for (i = 0; i < 12; i++){ 
				puts(a[i]);
			} 
		}
	}
	else if (list == 5){
		printf("請選擇賭場功能\n1.猜數字\n賭大小\n");
	
		
	}
	come();
	return 0;
}
