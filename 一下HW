//HW C#1 D1155099 李韋宏 
#include<stdio.h>

int main(){
	
	int n,i,j;
	printf("pleas input how many levels of the diamond:");
	scanf("%d",&n);
	if(n%2!=0){
		
		for(i=1;i<=n/2+1;i++){
			for(j=i;j<n/2+1;j++){
				printf(" ");
			}
			for(j=1;j<i*2;j++){
				printf("*");
			} 
			printf("\n");
		}
		
		for(i=1;i<=n/2;i++){
			for(j=0;j<i;j++){
				printf(" ");
			}
			for(j=i*2;j<n;j++){
				printf("*");
			} 	
			printf("\n");
		}
	}
	else if(n%2==0){
		printf("請輸入奇數");
	}
	return 0;
} 
