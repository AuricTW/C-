//HW C#1 D1155099 李韋宏 
#include<stdio.h>

int main(){
	
	int n,i,j;
	printf("pleas input how many levels of the diamond:");
	scanf("%d",&n);
	if(n%2!=0){
		
		for(i=1;i<=n/2+1;i++){
			for(j=i;j<n/2+1;j++){
				printf(" ");
			}
			for(j=1;j<i*2;j++){
				printf("*");
			} 
			printf("\n");
		}
		
		for(i=1;i<=n/2;i++){
			for(j=0;j<i;j++){
				printf(" ");
			}
			for(j=i*2;j<n;j++){
				printf("*");
			} 	
			printf("\n");
		}
	}
	else if(n%2==0){
		printf("請輸入奇數");
	}
	return 0;
} 



//課堂練習1  D1155099  李韋宏
#include<stdio.h>
#include<time.h>
int main(){
	char name[20];
	double a,b,bmi;
	printf("請輸入姓名:");
	scanf("%s",&name);
	printf("請輸入身高:");
	scanf("%lf",&a);
	printf("請輸入體重:");
	scanf("%lf",&b);
	bmi=(b)/((a/100)*(a/100));
	printf("姓名:%s\n",name);
	printf("身高:%.2lf\n",a);
	printf("體重:%.2lf\n",b);
	printf("BMI:%.2lf\n",bmi);
	return 0;
}


//課堂練習2  D1155099  李韋宏 
#include<stdio.h>
int main(){
	int n,k;
	printf("請輸入成績==>");
	scanf("%d",&n);
	printf("[1]GPA成績換算\n[2]是否及格\n");
	scanf("%d",&k);
	
	if(k==1){
		printf("學生成績:");
		if(n>=80){
			printf("A");
		}
		else if(n>=70){
			printf("B");
		}
		else if(n>=60){
			printf("C");
		}
		else{
			printf("D");
		}
	}
	if(k==2){
		if(n>=60){
			printf("成績及格!");
		}
		else{
			printf("成績不及格!");
		}
	}
	
	return 0;
}


//課堂練習3  D1155099  李韋宏 
#include<stdio.h>
int main(){
	int a,i,j;
	
	printf("請輸入要幾層三角形:");
	scanf("%d",&a);
	for(i=1;i<=a;i++){
		for(j=i;j<a;j++){
			printf(" ");
		}
		for(j=1;j<i*2;j++){
			printf("*");
		}
		
		printf("\n");
	}
	return 0;
}
